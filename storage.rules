rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /assignments/{uid}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
      allow delete: if exists(/databases/(default)/documents/users/$(request.auth.uid)) || request.auth.token.admin == true;
    }
    match /{allPaths=**} {
      allow read, write: if false; // default deny
    }
  }
}